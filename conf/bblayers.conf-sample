# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  ${HOME}/oe-workspace/poky/meta \
  ${HOME}/oe-workspace/poky/meta-poky \
  ${HOME}/oe-workspace/poky/meta-openembedded/meta-oe \
  ${HOME}/oe-workspace/poky/meta-openembedded/meta-networking \
  ${HOME}/oe-workspace/poky/meta-openembedded/meta-python \
  ${HOME}/oe-workspace/poky/meta-k3s \
  ${HOME}/oe-workspace/meta-k3s-odroid-c2 \
"
